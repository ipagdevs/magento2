{
  "name": "ipag/payment",
  "description": "iPag Payment Extension for Magento 2",
  "type": "magento2-module",
  "license": "MIT",
  "authors": [
    {
      "name": "Jonathan Delgado",
      "email": "jonathan@ipag.com.br"
    }
  ],
  "require": {
    "php": ">=7.4",
    "ipagdevs/ipag-sdk-php": "v1.3.1",
    "jhernandes/ipag-sdk-php": "^1.2.0",
    "endroid/qr-code": "^2.5 || ^3.9 || ^4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "autoload": {
    "files": [
      "registration.php"
    ],
    "psr-4": {
      "Ipag\\Payment\\": ""
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Ipag\\Payment\\Test\\": "test/"
    }
  },
  "extra": {
    "map": [
      [
        "",
        "app/code/Ipag/Payment"
      ]
    ]
  },
  "minimum-stability": "dev"
}